<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  >
    
<ImageView
	android:id="@+id/imageArtist"
	android:layout_height="80dp"
	android:layout_width="80dp"
	android:padding="5dp"/>
	
<TextView
    android:id="@+id/nameArtist"
	android:layout_height="wrap_content"
	android:layout_width="100dp"
	android:layout_toRightOf="@id/imageArtist"
	android:layout_alignParentTop="true"
	android:gravity="center"
	android:padding="5dp"
/>

<TextView
    android:id="@+id/genreArtist"
	android:layout_height="wrap_content"
	android:layout_width="90dp"
	android:layout_toRightOf="@id/nameArtist"
	android:layout_alignParentTop="true"
	android:padding="5dp"
/>

<TextView
    android:id="@+id/yearArtist"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_toRightOf="@id/genreArtist"
	android:layout_alignParentTop="true"
	android:padding="5dp"
/>
     
</RelativeLayout>